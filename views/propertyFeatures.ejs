                <div class="row" id="mainHeigth">
                    <form action="propertyFeatures/.." method="post" name="clickedPhoto"
                        value="<%=newImmobiles[0]._id %>"></form>
                    <div class="col-8" id="leftPhoto" onclick="immobilePhotoClick()">
                        <% if(immobile.images[0].filename){  %>
